unit ColorUnit ;

interface

  uses
    System.SysUtils ,
    System.Classes ;

  type
    TFlatColor = class

      const
        LightTeal : LongInt = $009CBC1A ;
        DarkTeal : LongInt  = $0085A016 ;
        // ---
        LightGreen : LongInt = $0071CC2E ;
        DarkGreen : LongInt  = $0060AE27 ;
        // ---
        LightBlue : LongInt = $00DB9834 ;
        DarkBlue : LongInt  = $00B98029 ;
        // ---
        LightPurple : LongInt = $00B6599B ;
        DarkPurple : LongInt  = $00AD448E ;
        // ---
        LightNavy : LongInt = $005E4934 ;
        DarkNavy : LongInt  = $00503E2C ;
        // ---
        LightYellow : LongInt = $000FC4F1 ;
        DarkYellow : LongInt  = $00129CF3 ;
        // ---
        LightOrange : LongInt = $00227EE6 ;
        DarkOrange : LongInt  = $000054D3 ;
        // ---
        LightRed : LongInt = $003C4CE7 ;
        DarkRed : LongInt  = $002B39C0 ;
        // ---
        LightWhite : LongInt = $00F1F0EC ;
        DarkWhite : LongInt  = $00C7C3BD ;
        // ---
        LightSilver : LongInt = $00A6A595 ;
        DarkSilver : LongInt  = $008D8C7F ;

    end ;

implementation

end.
